<?xml version='1.0' encoding='utf-8'?>
<widget id="br.com.join" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Join</name>
    <description>
        Making gamers life funnier, by gaming together.
    </description>
    <author email="christian.dorner@gmail.com" href="https://github.com/cdorner">
      Christian Dorner
    </author>
    <content src="index.html" />

    <preference name="webviewbounce" value="false" />
    <preference name="UIWebViewBounce" value="false" />
    <preference name="DisallowOverscroll" value="true" />

    <feature name="StatusBar">
        <param name="ios-package" onload="true" value="CDVStatusBar" />
    </feature>

    <access origin="http://*" />
    <access origin="https://*" />

    <plugin name="cordova-plugin-whitelist" source="npm" spec="1.2.0" />
    <plugin name="cordova-plugin-device" source="npm" spec="1.1.0" />
    <plugin name="cordova-plugin-splashscreen" source="npm" spec="2.1.0" />
    <plugin name="cordova-plugin-console" source="npm" spec="1.0.1" />
    <plugin name="cordova-plugin-statusbar" source="npm" spec="1.0.1" />
    <plugin name="cordova-sqlite-storage" source="npm" spec="0.7.14" />
    <plugin name="cordova-plugin-globalization" source="npm" spec="1.0.2" />
    <plugin name="phonegap-plugin-push" source="npm" spec="1.5.1" />
    <plugin name="ionic-plugin-keyboard" source="npm" spec="1.0.8" />
    <plugin name="de.appplant.cordova.plugin.local-notification" source="npm" spec="0.8.4" />

    <allow-navigation href="http://*/*" />
    <allow-intent href="https://*/*" />

    <platform name="android">
        <icon src="res/screen/android/icon.png" />

        <icon density="port-hdpi" src="res/screen/android/icon.hdpi.png" />
        <icon density="port-ldpi" src="res/screen/android/icon.ldpi.png" />
        <icon density="port-mdpi" src="res/screen/android/icon.mdpi.png" />
        <icon density="port-xhdpi" src="res/screen/android/icon.xhdpi.png" />
        <icon density="hdpi" src="res/screen/android/icon.hdpi.png" />
        <icon density="ldpi" src="res/screen/android/icon.ldpi.png" />
        <icon density="mdpi" src="res/screen/android/icon.mdpi.png" />
        <icon density="xhdpi" src="res/screen/android/icon.xhdpi.png" />

        <splash density="hdpi" src="res/screen/android/hdpi/splash.9.png" />
        <splash density="ldpi" src="res/screen/android/ldpi/splash.9.png" />
        <splash density="mdpi" src="res/screen/android/mdpi/splash.9.png" />
        <splash density="xhdpi" src="res/screen/android/xhdpi/splash.9.png" />
        <splash density="xxhdpi" src="res/screen/android/xxhdpi/splash.9.png" />
        <splash density="xxxhdpi" src="res/screen/android/xxxhdpi/splash.9.png" />

        <engine name="android" spec="~4.1.1" />

        <preference name="android-build-tool" value="gradle" />
        <preference name="android-minSdkVersion" value="16" />
        <preference name="android-targetSdkVersion" value="16" />
    </platform>

    <platform name="ios">
        <!-- iPhone -->
        <icon src="res/screen/ios/Icon.png" platform="ios" width="57" height="57" />
        <icon src="res/screen/ios/Icon@2x.png" platform="ios" width="114" height="114" />

        <icon src="res/screen/ios/Icon-40.png" platform="ios" width="40" height="40" />
        <icon src="res/screen/ios/Icon-40@2x.png" platform="ios" width="80" height="80" />
        <icon src="res/screen/ios/Icon-40@3x.png" platform="ios" width="120" height="120" />

        <icon src="res/screen/ios/Icon-60.png" platform="ios" width="60" height="60" />
        <icon src="res/screen/ios/Icon-60@2x.png" platform="ios" width="120" height="120" />
        <icon src="res/screen/ios/Icon-60@3x.png" platform="ios" width="180" height="180" />

        <icon src="res/screen/ios/Icon-72.png" platform="ios" width="72" height="72" />
        <icon src="res/screen/ios/Icon-72@2x.png" platform="ios" width="144" height="144" />

        <icon src="res/screen/ios/Icon-76.png" platform="ios" width="76" height="76" />
        <icon src="res/screen/ios/Icon-76@2x.png" platform="ios" width="152" height="152" />

        <icon src="res/screen/ios/Icon-83.5@2x.png" platform="ios" width="167" height="167" />

        <icon src="res/screen/ios/Icon-Small.png" platform="ios" width="29" height="29" />
        <icon src="res/screen/ios/Icon-Small@2x.png" platform="ios" width="58" height="58" />
        <icon src="res/screen/ios/Icon-Small@3x.png" platform="ios" width="87" height="87" />

        <icon src="res/screen/ios/Icon-Small-50.png" platform="ios" width="50" height="50" />
        <icon src="res/screen/ios/Icon-Small-50@2x.png" platform="ios" width="100" height="100" />

        <icon src="res/screen/ios/iTunesArtwork.png" platform="ios" width="512" height="512" />
        <icon src="res/screen/ios/iTunesArtwork@2x.png" platform="ios" width="1024" height="1024" />

        <!-- iPhone -->
        <splash src="res/screen/ios/Default@2x.png" platform="ios" width="640" height="960" />
        <splash src="res/screen/ios/Default-568h@2x.png" platform="ios" width="640" height="1136" />
        <splash src="res/screen/ios/Default-667h@2x.png" platform="ios" width="750" height="1334" />
        <splash src="res/screen/ios/Default-Landscape-736h@3x.png" platform="ios" width="2208" height="1242" />
        <splash src="res/screen/ios/Default-Portrait-736h@3x.png" platform="ios" width="1242" height="2208" />

        <engine name="ios" spec="~3.9.2" />

        <preference name="BackupWebStorage" value="none" />
        <preference name="KeyboardDisplayRequiresUserAction" value="true" />
    </platform>
</widget>
